{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES6"
    ],
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "./src"
  ],
  "lib": [
    "esnext"
  ],
  "ts-node": {
    "esm": true
  }
}
